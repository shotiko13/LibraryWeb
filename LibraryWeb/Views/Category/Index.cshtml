@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end" style="color: navajowhite; border-radius:10px;">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> &nbsp; Create Category
            </a>
        </div>
    </div>
    <br />
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="45%">
                    @obj.Name
                </td>
                <td width="35%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>

</table>
</div>